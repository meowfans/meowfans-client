{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@workspace/ui/lib": ["../ui/src/lib"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
